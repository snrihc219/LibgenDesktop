<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="TabStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="ScanButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Margin" Value="0,0,0,12" />
    </Style>
    <Style x:Key="FoundDataGrid" TargetType="DataGrid" BasedOn="{StaticResource SearchResultsDataGrid}" />
    <Style x:Key="AddAllButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Margin" Value="0,12,0,0" />
    </Style>
    <Style x:Key="NotFoundDataGrid" TargetType="DataGrid" BasedOn="{StaticResource SearchResultsDataGrid}" />
    <Style x:Key="LogPanel" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
    </Style>
</ResourceDictionary>