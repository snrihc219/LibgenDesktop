<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style x:Key="TopContainer" TargetType="Grid">
        <Setter Property="Margin" Value="12" />
    </Style>
    <Style x:Key="Header" TargetType="TextBlock">
        <Setter Property="Margin" Value="12" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>
    <Style x:Key="NewVersion" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="DownloadProgress" TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignLinearProgressBar}">
        <Setter Property="Height" Value="12" />
        <Setter Property="Margin" Value="0,32" />
        <Setter Property="md:TransitionAssist.DisableTransitions" Value="True" />
    </Style>
    <Style x:Key="SkipButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}" />
    <Style x:Key="DownloadButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Margin" Value="8,0" />
    </Style>
    <Style x:Key="InterruptButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedAccentButton}" />
</ResourceDictionary>